---
import { getStrapiMedia } from "../utils/getStrapiMedia";
const { block } = Astro.props;
const imageUrl = getStrapiMedia(block.image?.url);
---

<section class="py-20 bg-gray-50">
	<div class="container mx-auto px-6">
		<h2 class="text-3xl font-bold mb-10 text-center">Featured Articles</h2>
		<div class="grid md:grid-cols-3 gap-8">
			{
				block.articles.map((article: any) => (
					<a
						href={`/blog/${article.slug}`}
						class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition block"
					>
						{imageUrl && (
							<img
								src={imageUrl}
								alt={block.image?.alternativeText ?? "Hero Image"}
								class="rounded-lg mb-4"
								loading="lazy"
							/>
						)}
						<h3 class="text-xl font-semibold mb-2">{article.title}</h3>
						<p class="text-gray-600 text-sm mb-4">
							{article.description}
						</p>
						<span class="text-blue-600 font-medium">Read More â†’</span>
					</a>
				))
			}
		</div>
	</div>
</section>
