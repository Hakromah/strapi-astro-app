---
import { getStrapiMedia } from "../utils/getStrapiMedia";
const { block } = Astro.props;
const imageUrl = getStrapiMedia(block.image?.url);
---

<section class="py-20 bg-gray-50">
	<div class="container mx-auto px-6 text-center">
		{
			imageUrl && (
				<img
					src={imageUrl}
					alt={block.image?.alternativeText ?? "Hero Image"}
					class="w-[150px] h-[150px] rounded-full mx-auto mb-6 shadow-lg"
					loading="lazy"
				/>
			)
		}
		<h3 class="text-2xl font-bold">{block.personName}</h3>
		<p class="text-blue-600 mb-4">{block.personJob}</p>
		<p class="max-w-2xl mx-auto text-gray-600">{block.text}</p>
	</div>
</section>
