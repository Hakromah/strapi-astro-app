---
const { block } = Astro.props;
---

<section class="py-20 bg-white">
	<div class="container mx-auto px-6">
		<h2 class="text-3xl font-bold text-center mb-10">FAQs</h2>
		<div class="space-y-6">
			{
				block.faq.map((item: any) => (
					<details class="border border-gray-200 rounded-lg p-6 hover:shadow">
						<summary class="font-semibold cursor-pointer">
							{item.heading}
						</summary>
						<p class="mt-3 text-gray-600">{item.text}</p>
					</details>
				))
			}
		</div>
	</div>
</section>
