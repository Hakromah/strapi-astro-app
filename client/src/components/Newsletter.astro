---
const { block } = Astro.props;
---

<section class="bg-blue-600 py-20 text-center text-white">
	<h3 class="text-3xl font-bold mb-4">{block.heading}</h3>
	<p class="max-w-2xl mx-auto mb-6">{block.text}</p>
	<form class="flex justify-center gap-3 max-w-md mx-auto">
		<input
			type="email"
			placeholder={block.placeholder}
			class="w-full px-4 py-3 rounded-lg text-gray-900"
		/>
		<button
			class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition"
		>
			{block.label}
		</button>
	</form>
</section>
